.company-history
	.container
		h2 История
		.company-history__wrapper.d-flex
			.company-history__slider.owl-carousel.owl-theme
				each history in histories
					.company-history__slider-item
						.company-history__slider-item-title= history.title
						.company-history__slider-item-desc= history.desc
						.company-history__slider-item-text= history.text
						.company-history__slider-item-img
							img(src=history.img, alt="")
			.company-history__slider-dots.owl-dots
				each history in histories
					.owl-dot.company-history__slider-dot= history.title
