mixin btn-carousel
	.row
		.col-6.mb-4
			button.btn.btn-warning.step__prev.mt-4.mb-4.d-flex.align-items-center.w-100.step__btn-mobile
				i.icon.icon-arrow-left.step__next-icon
				span.ml-2 Предыдущий этап
		.col-6.mb-4
			button.btn.btn-warning.step__next.mt-4.mb-4.d-flex.align-items-center.w-100.step__btn-mobile
				span.mr-2 Следующий этап
				i.icon.icon-arrow-right.step__next-icon
mixin step-list(...lists)
	ul.step__list.list-unstyled.d-none.d-md-flex
		each list, index in lists
			if index == 0
				li.step__list-item.active
					a(href="#" data-link=index).step__list-item-link
						span.step__list-item-link-num= index + 1
						span.step__list-item-link-text= list
			else
				li.step__list-item
					a(href="#" data-link=index).step__list-item-link
						span.step__list-item-link-num= index + 1
						span.step__list-item-link-text= list
mixin step-next-btn
	button.btn.btn-warning.step__next.mt-4.mb-4.d-none.d-md-flex.align-items-center
		span.mr-2 Следующий этап
		i.icon.icon-arrow-right.step__next-icon
