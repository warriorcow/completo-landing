			.h5.text-uppercase.mb-0
				u.text-dark= title
			.b2b__tab-item__arrow 
				i.icon.icon-bx_bx-left-arrow-alt
			.b2b__tab-item-bottom.text-uppercase
				span= text1
				span= text2
	.collapse.b2b--collapse(aria-labelledby="headingOne-" + link data-parent="#b2b__accordion" id="collapseOneB2b-" + link)
		.slick-slider-mob.b2b__slider-mob.mb-4.pt-4
