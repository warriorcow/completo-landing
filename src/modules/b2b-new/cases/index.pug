mixin b2b__tab-item(title, text1, text2, link, active = false)
	if active
		a(href="#" data-href=link).b2b__tab-item.b2b__tab-item-active.js-tab-b2b
			.h5.text-uppercase.mb-0
				u.text-dark= title
			.b2b__tab-item-bottom.text-uppercase
				span= text1
				span= text2
	else
		a(href="#" data-href=link).b2b__tab-item.js-tab-b2b
			.h5.text-uppercase.mb-0
				u.text-dark= title
			.b2b__tab-item-bottom.text-uppercase
				span= text1
				span= text2
mixin b2b__tab-item-mob(title, text1, text2, link)
