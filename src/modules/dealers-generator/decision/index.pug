	.container
		.row.mt-4
			.col-xl-4.col-lg-5.col-md-6.mb-4
				.d-flex.flex-column.justify-content-center.h-100
					.d-flex.align-items-start.mb-3
						i.h1.font-weight-normal.text-warning.icon.icon-analysis-2.mr-3
						.decision-container
